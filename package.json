{
  "name": "neo4j-graphql",
  "version": "1.0.0",
  "description": "This is a prototype to prove 2 things:",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd query-api && npm i",
    "db": "docker-compose up -d",
    "seed": "cd seed && npm start && cd -",
    "start:query-api": "cd query-api && npm start && cd -",
    "start:webapp": "cd webapp && npm start && cd -",
    "start": "npm run db && scripts/wait-for-neo4j && concurrently \"npm:start:query-api\" \"npm:start:webapp\"",
    "clean": "docker-compose down; sudo rm -rf ./data"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^6.5.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1"
  }
}
